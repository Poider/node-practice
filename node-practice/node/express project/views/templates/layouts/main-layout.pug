doctype html
head
	meta(charset='UTF-8')
	meta(http-equiv='X-UA-Compatible' content='IE=edge')
	meta(name='viewport' content='width=device-width, initial-scale=1.0')
	title  #{Title}
	link(rel='stylesheet' href='/css/main-css.css')
	link(rel='stylesheet' href='/css/form-css.css')
	block css
header.main-header
	nav.main-header__nav
		ul.main-header__list
			li.main-header__item
				a(href='/index' class=(pathy==='shop/index'? 'active':'')) Home
			li.main-header__item
				a(href='/products' class=(pathy==='/products'? 'active':'')) Products
			li.main-header__item
				a(href='/add-products' class=(pathy==='/add-product'? 'active':'')) Add Product
			li.main-header__item
				a(href='/cart' class=(pathy==='shop/cart'? 'active':'')) Cart
			li.main-header__item
				a(href='/orders' class=(pathy==='shop/orders'? 'active':'')) Orders
			li.main-header__item
				a(href='/checkout' class=(pathy==='shop/checkout'? 'active':'')) Checkout
			li.main-header__item
				a(href='/admin-products' class=(pathy==='/admin-products'? 'active':'')) Admin Products
block content