extends ../layouts/main-layout.pug
block css
	link(rel='stylesheet' href='/css/product-css.css')
block content
	main.main-body
		form.main-body__form(action='/product-editted' method='post')
			// send it to a page that checks if the product successfully added, and redirect depending on whether it failed or not
			input(type='hidden' name = 'id' value = product.id)
			nav.form_element
				label(name='product_title_label' for="product_title") Title
				input#product_title(type='text' name='product_title'  value = product.title  )
			nav.form_element
				label(name='img_url_label' for="img_url") Image Url
				input#product_title(type='text' name='img_url' value = product.imageurl )
			nav.form_element
				label(name='price_label' for="price") Price
				input#product_title(type='number' name='price' value = product.price)
			nav.form_element
				label(name='product_description_lable' for="product_title") Description
				br
				textarea#product_title(type='text' name='product_description'  rows="5" style="min-width: 60%" ) #{product.description}
			nav.form_element
				button#submit(type='submit') Edit
		br